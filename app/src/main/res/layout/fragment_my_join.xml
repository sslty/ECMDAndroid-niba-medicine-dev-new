<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_resting_order"
                    style="@style/radio_left_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:text="参与项目" />

                <RadioButton
                    android:id="@+id/id_want_proficient"
                    style="@style/radio_middle_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/medicine_guide" />

                <RadioButton
                    android:id="@+id/btn_doing"
                    style="@style/radio_right_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="有奖分析" />

            </RadioGroup>


            <ListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
