<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="maxImageNumber" format="integer" />
    <attr name="numColumns" format="integer" />
    <attr name="barMaxLength" format="dimension" />
    <attr name="showCenterLetter" format="boolean" />
    <attr name="maxSelectCount" format="integer" />


    <!-- 条形控制控件自定义属性 -->
    <declare-styleable name="LineControllerView">
        <!-- 标题 -->
        <attr name="title" format="string" />
        <!-- 数字 -->
        <attr name="num" format="string" />
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean" />
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean" />
        <attr name="titleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AutoGridImageEdit">
        <attr name="numColumns" />
        <attr name="maxImageNumber" />
    </declare-styleable>

    <declare-styleable name="AutoGridImageView">
        <attr name="numColumns" />
        <attr name="maxImageNumber" />
    </declare-styleable>

    <declare-styleable name="AutoProgressLayout">
        <attr name="barMaxLength" />
    </declare-styleable>

    <declare-styleable name="AutoProgressContainerView">
        <attr name="barMaxLength" />
        <attr name="barHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AutoGridImageOriginalView">
        <attr name="maxImageNumber" />
    </declare-styleable>

    <declare-styleable name="BottomButton">
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
    </declare-styleable>

    <declare-styleable name="ContactView">
        <attr name="showCenterLetter" />
    </declare-styleable>

    <declare-styleable name="DepartmentView">
        <attr name="showCenterLetter" />
        <attr name="maxSelectCount" />
    </declare-styleable>

    <declare-styleable name="CustomDepartmentView">
        <attr name="showCenterLetter" />
        <attr name="maxSelectCount" />
    </declare-styleable>

    <declare-styleable name="DepartmentSearchView">
        <attr name="showCenterLetter" />
        <attr name="maxSelectCount" />
    </declare-styleable>

</resources>
