<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dim_grey</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <!--normal mBtnExit -->
    <style name="normal_button">
        <item name="android:background">@drawable/shape_button_circle_nomal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normal_right_button">
        <item name="android:background">@drawable/shape_button_circle_right_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normal_left_button">
        <item name="android:background">@drawable/shape_button_circle_left_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--grey mBtnExit-->
    <style name="grey_button">
        <item name="android:background">@drawable/shape_button_circle_grey</item>
    </style>

    <style name="grey_left_button">
        <item name="android:background">@drawable/shape_button_circle_left_grey</item>
    </style>

    <style name="grey_right_button">
        <item name="android:background">@drawable/shape_button_circle_right_grey</item>
    </style>

    <!--radio mBtnExit-->
    <style name="radio_middle_button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_radio_button_text</item>
        <item name="android:background">@drawable/selector_radio_middle_button</item>
    </style>


    <style name="radio_left_button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_radio_button_text</item>
        <item name="android:background">@drawable/selector_radio_left_button</item>
    </style>

    <style name="radio_right_button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_radio_button_text</item>
        <item name="android:background">@drawable/selector_radio_right_button</item>
    </style>

    <!--light_blue mBtnExit -->
    <style name="light_blue_button">
        <item name="android:background">@drawable/shape_button_circle_blue_royal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--orange mBtnExit -->
    <style name="orange_button">
        <item name="android:background">@drawable/shape_button_circle_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--normal mBtnExit -->
    <style name="blue_local_button">
        <item name="android:background">@drawable/shape_button_circle_blue_local_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--InputTextLayout floating font-->
    <style name="InputTextFloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>

    </style>


    <!--导航button-->
    <style name="nav_bar_radio_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_toolbar</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/selector_navigation_radio_button_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="linear_layout_weight_vertical_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_zero</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="login_button_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_marginRight">90dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="button_right_of_input_layout_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/normal_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--首页界面-->
    <style name="text_view_img_item">
        <item name="android:layout_width">@dimen/dp_zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="home_linear_layout_horizontal_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_zero</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_width_weight_space_item">
        <item name="android:layout_width">@dimen/dp_zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.03</item>
    </style>

    <style name="linear_layout_height_weight_space_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_zero</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="WaitingProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
